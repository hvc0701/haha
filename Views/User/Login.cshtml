
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Login Content -->
<div class="container-login" style="margin-top: 80px;">
  <div class="row justify-content-center">
    <div class="col-xl-4 col-lg-4 col-md-4">
      <div class="card shadow-sm my-5">
        <div class="card-body p-0">
          <div class="row">
            <div class="col-lg-12">
              <div class="login-form" style="padding: 20px;">
                <div class="text-center">
                  <h1 class="h4 text-gray-900 mb-4">Login</h1>
                </div>
                <form asp-action="login" asp-controller="user" class="user">
                  <h3 class="text-center" style="font-size: 22px; font-family: math; color: red;">
                    @ViewBag.Message
                  </h3>
                  <div class="form-group">
                    <input type="email" class="form-control" name="email" id="exampleInputEmail" aria-describedby="emailHelp" placeholder="Enter Email Address">
                  </div>
                  <div class="form-group">
                    <input type="password" name="password" class="form-control" id="exampleInputPassword" placeholder="Password">
                  </div>
                  <div class="form-group">
                    <div class="custom-control custom-checkbox small" style="line-height: 1.5rem;">
                      <input type="checkbox" class="custom-control-input" id="customCheck">
                      <label class="custom-control-label" for="customCheck">
                        Remember Me
                      </label>
                    </div>
                  </div>
                  <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">Login</a>
                  </div>
                </form>
                <hr>
                <div class="text-center">
                  <a class="font-weight-bold small" href="/user/register">Create an Account!</a>
                </div>
                <div class="text-center">
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- Login Content -->
<style>
  #sticker {
    background: #051922 !important;
  }
</style>

